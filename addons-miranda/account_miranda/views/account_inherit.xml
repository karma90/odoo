    	<menuitem id="menu_accounting_invoice_out_movements_id" parent="menu_accounting_movements_id" name="Facturas cliente" action="account.action_move_out_invoice_type" sequence="0"/>

    	<menuitem id="menu_accounting_invoice_in_movements_id" parent="menu_accounting_movements_id" name="Facturas proveedor" action="account.action_move_in_invoice_type" sequence="1"/>

    	<menuitem id="menu_accounting_invoice_in_movements_id" parent="menu_accounting_movements_id" name="Facturas proveedor" action="account.action_move_in_invoice_type" sequence="2"/>

    	<menuitem id="menu_accounting_payment_movements_id" parent="menu_accounting_movements_id" name="Plazos de pago" action="account.action_payment_term_form" sequence="2"/> -->

    	<menuitem id="menu_accounting_report_inherit_id" parent="root_accounting_plan_list" name="Informes" sequence="5"/>

    	<menuitem id="menu_accounting_report_balance_general_id" parent="menu_accounting_report_inherit_id" name="Balance general" action="account_reports.account_financial_html_report_action_2" sequence="1"/>

        <record model="res.groups" id="group_invisible">
            <field name="name">Menu INV</field>
        </record>

        <record id="account.menu_finance" model="ir.ui.menu">
            <field name="groups_id" eval="[(6, False, [ref('account_miranda.group_invisible')])]"/>
        </record>

    </data>
</odoo>
